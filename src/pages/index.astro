---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Button from '../components/Button/index.jsx';
import Nav from '../components/Nav/index.jsx';
import Footer from '../components/Footer/index.jsx';
import PortfolioPreview from '../components/PortfolioPreview/index.jsx';

// Data Fetching: List all Markdown posts in the repo.
const projets = Astro.fetchContent('./project/**/*.md');

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="fr">
  <head>
    <MainHead title="Clément Yziquel" />
    <style lang="scss">
      $w-s: 750px;

      .hero {
        position: relative;
        overflow: hidden;

        @media (min-width: $w-s) {
          height: 45vw;
        }
      }

      p{
        text-align: justify;
        font-size: large;
      }

      .img {
        display: block;
        width: 100%;
        height: auto;
      }

      .section{
        overflow: visible;
        ul{
          list-style-type: none;
          margin: 0;
          padding: 0;
          li{
            float: left;
            font-size: 1.2rem;
            border: 3px solid #ccc;
            padding: 3px;
            margin: 5px;
            transition: transform 0.3s ease;
          &:hover {
            border-color: #333;
            transform: scale(1.1);
            background-color: white;
          }
          }
        }
      }

      .section1{ grid-area: 1 / 1 / 2 / 4; }
      .section2{ grid-area: 1 / 4 / 2 / 7; }
      .section3{ grid-area: 2 / 1 / 3 / 3; }
      .section4{ grid-area: 2 / 3 / 3 / 5; }
      .section5{ grid-area: 2 / 5 / 3 / 7; }

      .gradient,
      .gradient2 {
        background-image: url('/assets/mesh-gradient-cyber2.jpg');
        background-size: cover;
        pointer-events: none;
        mix-blend-mode: screen;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2;
      }

      .gradient2 {
        mix-blend-mode: multiply;
        background-size: cover;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding-left: 2rem;

        @media (min-width: $w-s) {
          padding-left: 4rem;
        }
      }

      .title {
        font-weight: 900;
        font-size: var(--f-u8);
        margin-bottom: 0.5rem;
        margin-top: 0;
        color: var(--t-bg);

        @media (min-width: $w-s) {
          font-size: var(--f-u12);
        }
      }

      .grid {
        display: grid;
        grid-column-gap: 0.5rem;
        padding: 0;

        @media (min-width: 1200px) {
          grid-template-columns: repeat(6, 1fr);
          grid-template-rows: repeat(2, 1fr); 
        }
      }

      .sectionTitle {
        font-weight: 700;
        font-size: var(--f-u8);
        margin-top: 4rem;
        margin-bottom: 2rem;
      }

      .role {
        position: relative;
        display: inline-block;
        font-weight: 900;
        color: var(--c-white);
        background-color: var(--c-black);
        padding: 0.25em 0.5em;
        z-index: 2;

        @media (min-width: $w-s) {
          font-size: var(--f-u3);
        }

        + .role {
          margin-left: 1em;
        }

        &:nth-of-type(1) {
          .invert {
            background-color: var(--c-pink);
          }
        }

        &:nth-of-type(2) {
          .invert {
            background-color: var(--c-blue);
          }
        }

        &:nth-of-type(3) {
          .invert {
            background-color: var(--c-green);
          }
        }

        &:hover {
          .invert {
            //clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
          }
        }
      }

      .invert {
        position: absolute;
        color: var(--t-fg);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
        transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
      }

      .desc {
        font-size: var(--f-u2);
        margin-top: 1.5rem;
        margin-bottom: 0;
        color: white;
        background-color: rgb(0,8,16);
      }

      .subtitle {
        display: block;
        font-weight: 400;
        font-size: var(--f-d6);
        letter-spacing: -0.0625em;
      }

      .bio {
        line-height: 2;
        margin-bottom: 1.5rem;

        br {
          margin-bottom: 10px;
        }

        > span:first-of-type {
          line-height: 1;
          margin-bottom: 0.5em;
          display: block;
          font-weight: 700;
          font-size: var(--f-u4);
        }
      }
    </style>
  </head>
  <body>
    <Nav />
    <header class="hero">
      <img
        width="1600"
        height="1131"
        class="img"
        src="https://images.unsplash.com/photo-1526374965328-7f61d4dc18c5?w=1200&q=75"
      />
      <div class="gradient" />
      <div class="gradient2" />
      <div class="overlay">
        <h1 class="title">
          <small class="subtitle">Vitrine professionnelle</small>Clément Yziquel
        </h1>
        <div>
          <span class="role">
            👩‍💻 Cybersécurité
          </span>&nbsp;
          <span class="role">
            🏋️ Sport
          </span>&nbsp;
          <span class="role">
            ✈️ Voyages
          </span>
        </div>
        <p class="desc">Étudiant ingénieur généraliste de 
          {
            new Date().getFullYear() - 2001
          } ans, spécialisé en Cybersécurité.</p>
      </div>
    </header>
    <main class="wrapper mt4 mb4">
      <div>
        <!-- <h3 class="sectionTitle">À propos</h3> -->
        <p class="bio">
          <span>Salut👋</span>
          Je suis Clément, un étudiant ingénieur spécialisé en Cybersécurité.
          <br />
          J'ai commencé à m'intéresser à la cybersécurité en 2021, et j'ai depuis eu l'occasion de travailler des projets variés. De
          la recherche de vulnérabilités dans des applications web à la mise en place d'architectures réseau sécurisées, en passant
          par le suivi de l'homologation d'un système d'information (normes ANSSI), j'ai pu découvrir de nombreux aspects de la cybersécurité.
          <br />
          Je suis également passionné par le développement web, et j'ai eu l'occasion de travailler sur plusieurs projets scolaires et personnels. 
          La philosophie DevOps (et naturellement DevSecOps) m'intéresse particulièrement, j'ai pu découvrir des outils de CI/CD tels que Gitlab CI ou Github Actions. Je suis aussi 
          familier avec la conteneurisation via Docker.  
          <br />
          Je suis actuellement en M1 Cybersécurité à l'ISEN Yncréa Ouest, et je suis à la recherche d'une alternance pour mon M2 (début octobre 2023).
          <br />
          N'hésitez pas à me contacter si vous souhaitez en savoir plus sur mon parcours !
        </p>
      </div>
      <div class="grid">
        <div class="section section1" >
          <h3 class="sectionTitle">Hard skills</h3>
          <ul>
            <li>🌐 Réseaux (cours Cisco)</li>
            <li>👩‍💻 Développement web</li>
            <li>🔒 Sécurité des systèmes d'information</li>
            <li>⚙️ Scripting</li>
        </div>
        <div class="section section2">
          <h3 class="sectionTitle">Technologies</h3>
          <ul>
            <li>🕸️ Routing, switching and wireless essentials</li>
            <li>🕸️ Enterprise networking, security and automatisation</li>
            <li>🎨 HTML/CSS/JS</li>
            <li>⚛️ React</li>
            <li>🚀 Symfony</li>
            <li>🗃️ MySQL</li>            
            <li>🌌 Astro</li>
            <li>🐍 Python/🐧 Bash</li>
            <li>📜 Git</li>
            <li>🐳 Docker</li>
            <li>🔬 Burp Suite</li>
            <li>🔃 Jenkins</li>
          </ul>
        </div>
        <div class="section section3">
          <h3 class="sectionTitle">Soft skills</h3>
          <ul>
            <li>👨‍👩‍👧‍👦 Travail en équipe</li>
            <li>📝 Rigueur</li>
            <li>📊 Gestion de projet</li>
            <li>🔎 Curiosité</li>
        </div>
        <div class="section section4">
          <h3 class="sectionTitle">Hobbies</h3>
          <ul>
            <li>🏋️ Sport</li>
            <li>🏎️ Sports mécaniques</li>
            <li>💻 Nouvelles technologies</li>
            <li>✈️ Voyages</li>
          </ul>
        </div>
        <div class="section section5">
          <h3 class="sectionTitle">Langues</h3>
          <ul>
            <li>🇫🇷 Français (Voltaire 862)</li>
            <li>🇬🇧 Anglais (FCE B2)</li>
            <li>🇪🇸 Espagnol (A2)</li>          
          </ul>
        </div>
      </div>
    </main>
    <Footer />

  </body>
</html>
